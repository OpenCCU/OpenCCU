#!/bin/sh


# Start all init scripts in /etc/init.d
# executing them in numerical order.
#
for i in /etc/init.d/S??* ;do

     # Ignore dangling symlinks (if any).
     [ ! -f "$i" ] && continue

     # put the psplash progess bar to the
     # corresponding level
     name=$(basename $i)
     /usr/bin/psplash-write "MSG Starting ${name:3}..."
     /usr/bin/psplash-write "PROGRESS $((${name:1:2}+1))"

     case "$i" in
	*.sh)
	    # Source shell script for speed.
	    (
		trap - INT QUIT TSTP
		set start
		. $i
	    )
	    ;;
	*)
	    # No sh extension, so fork subprocess.
	    $i start
	    ;;
    esac
done

IP=$(ip -4 route get 1 | head -1 | cut -d' ' -f8 | tr -d '\n')
/usr/bin/psplash-write "PROGRESS 0"

source /boot/VERSION 2>/dev/null
source /var/hm_mode 2>/dev/null
if [[ "${HM_MODE}" != "HM-LGW" ]]; then
  if [[ -z ${IP} ]]; then
    /usr/bin/psplash-write "MSG RaspberryMatic ${VERSION} -- ERROR: No IP address set"
  else
    /usr/bin/psplash-write "MSG RaspberryMatic ${VERSION} -- http://${IP}/"
  fi
else
  if [[ -z ${IP} ]]; then
    /usr/bin/psplash-write "MSG RaspberryMatic ${VERSION} -- HM-LGW-O-TW-W-EU Mode (ERROR: No IP address set)"
  else
    /usr/bin/psplash-write "MSG RaspberryMatic ${VERSION} -- HM-LGW-O-TW-W-EU Mode (${IP} / $(cat /var/board_serial))"
  fi
fi
